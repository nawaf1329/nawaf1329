<script>
/**
 * A3 Directory Logic - Version 5 (Mobile Optimized)
 * Unchanged logic, new renderer.
 */

// --- CONFIG ---
const STORAGE_KEY_DATA = 'a3_data_v5';
const STORAGE_KEY_FAV  = 'a3_fav_v5';
let data = [];
let favorites = new Set();
let isFavMode = false;
let currentFontSize = 14;

// --- PRINTER DATA ---
const printers = [
  { device: 'RINPA0301B',  name: 'Label Printer A' },
  { device: 'RNURB0202B',  name: 'Label Printer B' },
  { device: 'RNURA0301Z',  name: 'Printer (A3)' },
  { device: 'nurse_a3',    name: 'A3 PC Login' },
  { device: 'KFSH#3709',   name: 'PC Password' }
];

// --- ELEMENTS ---
const tbody = document.getElementById('tbody');
const searchInput = document.getElementById('search');
const btnFav = document.getElementById('btn-fav');
const syncDot = document.getElementById('sync-dot');
const printerOverlay = document.getElementById('printer-overlay');
const printerList = document.getElementById('printer-list');

// --- INITIALIZATION ---
function init() {
  const f = localStorage.getItem(STORAGE_KEY_FAV);
  if(f) favorites = new Set(JSON.parse(f));

  const d = localStorage.getItem(STORAGE_KEY_DATA);
  if(d) {
    try { data = JSON.parse(d)||[]; } catch(e){ data=[]; }
    render();
  }

  fetchData();
}

// --- DATA FETCHING (UNCHANGED) ---
function fetchData() {
  syncDot.style.opacity = '0.3';
  syncDot.style.background = '#fbbf24'; // Warning color while fetching
  const script = document.createElement('script');
  script.src = "https://script.google.com/macros/s/AKfycby9t71TVzAJyzRDczYYtLh7oIIq9J4jEvyddy7Bc-BAunFMTuYEwerlscLHjfKw0orA/exec";
  document.body.appendChild(script);
}

function callback(response) {
  syncDot.style.opacity = '1';
  syncDot.style.background = '#10b981'; // Success color
  
  const prev = localStorage.getItem(STORAGE_KEY_DATA);
  const next = JSON.stringify(response);
  if(prev !== next || data.length === 0) {
    localStorage.setItem(STORAGE_KEY_DATA, next);
    data = response;
    render();
  }
}

// --- RENDER LOGIC ---
function render() {
  tbody.innerHTML = '';
  const q = searchInput.value.toLowerCase().trim();
  
  // Filter
  const list = data.filter(row => {
    const key = makeKey(row);
    if (isFavMode && !favorites.has(key)) return false;
    if (!q) return true;
    
    return (row.category||'').toLowerCase().includes(q) ||
           (row.service||'').toLowerCase().includes(q) ||
           (row.extension||'').toString().includes(q);
  });

  // Sort (Simple alpha sort on Service)
  list.sort((a,b) => (a.service||'').localeCompare(b.service||''));

  if(list.length === 0) {
    tbody.innerHTML = `<tr><td colspan="4" style="text-align:center; padding:3rem; color:var(--text-sub)">No results found</td></tr>`;
    return;
  }

  const frag = document.createDocumentFragment();
  list.forEach(row => {
    const key = makeKey(row);
    const isFav = favorites.has(key);
    
    const tr = document.createElement('tr');
    tr.innerHTML = `
      <td style="text-align:center;">
        <button class="fav-btn ${isFav?'active':''}" onclick="toggleFav('${key}')">‚òÖ</button>
      </td>
      <td><span class="cat-badge">${row.category||''}</span></td>
      <td>
        <span class="svc-name">${row.service||''}</span>
        <span class="svc-cat-sub">${row.category||''}</span>
      </td>
      <td style="text-align:right;">
        <span class="ext-pill">${row.extension||''}</span>
      </td>
    `;
    frag.appendChild(tr);
  });
  tbody.appendChild(frag);
}

function toggleFav(key) {
  if(favorites.has(key)) favorites.delete(key);
  else favorites.add(key);
  localStorage.setItem(STORAGE_KEY_FAV, JSON.stringify([...favorites]));
  render();
}

function makeKey(r) { return `${r.category}|${r.service}|${r.extension}`; }

// --- UI ACTIONS ---
searchInput.addEventListener('input', render);

btnFav.addEventListener('click', () => {
  isFavMode = !isFavMode;
  btnFav.classList.toggle('active', isFavMode);
  render();
});

// Printer Sheet Logic
function openPrinterSheet() {
  printerList.innerHTML = '';
  printers.forEach(p => {
    const div = document.createElement('div');
    div.className = 'printer-row';
    div.innerHTML = `
      <span class="p-name">${p.name}</span>
      <span class="p-code">${p.device}</span>
    `;
    printerList.appendChild(div);
  });
  
  printerOverlay.style.display = 'flex';
  // Small delay to allow display:flex to apply before opacity transition
  setTimeout(() => printerOverlay.classList.add('open'), 10);
}

function closePrinterSheet() {
  printerOverlay.classList.remove('open');
  setTimeout(() => { printerOverlay.style.display = 'none'; }, 300);
}

// Quick Text Resizer
function resizeText() {
  currentFontSize = currentFontSize === 14 ? 16 : 14;
  document.body.style.fontSize = currentFontSize + 'px';
}

// Start
init();

</script>
</body>
</html>
